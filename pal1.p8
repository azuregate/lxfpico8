pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
  -- enable access to the extended palette
  poke(0x5f2e, 1)
  
  -- remap default colors (0ヌ█⧗15) to hidden colors (128ヌ█⧗143)
  pal({[0]=128,129,130,131,132,133,134,135,136,137,138,139,140,141,142,143}, 1)
end

function _draw()
  cls()

  -- display colors 0ヌ█⧗15, which now correspond to hidden colors
  for i = 0, 15 do
    local x = (i % 8) * 16
    local y = flr(i / 8) * 64
    rectfill(x, y, x + 15, y + 63, i)
    local txt_color = (i == 0 or i > 15) and 7 or 0
    print(i + 128, x + 1, y + 24, txt_color)
  end
end

